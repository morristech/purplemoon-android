<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#d8d8d8" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Top color -->
    <item android:bottom="3px">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="#ffeba7" />
            <gradient
                android:angle="45"
                android:centerX="0"
                android:centerY="0"
                android:startColor="#FFE381" 
                android:endColor="#FFD545"/>
        </shape>
    </item>
</layer-list>