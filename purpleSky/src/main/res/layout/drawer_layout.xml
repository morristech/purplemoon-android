<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_main"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_faint"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/drawer_layout_profileImgV"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/social_person" 
            android:contentDescription="@string/Accessibility_OwnProfilePicture"/>

        <TextView
            android:id="@+id/drawer_layout_statusLbl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_indicator"
            android:ellipsize="end"
            android:gravity="center_vertical|start"
            android:paddingLeft="8dp"
            android:text="@string/Loading_"
            android:textAppearance="@style/TextAppearance.MediumLarge" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCC" />

    <ListView
        android:id="@+id/drawer_layout_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/purple_faint"
        android:choiceMode="singleChoice"
        android:divider="#CCC"
        android:dividerHeight="1dp" />

</LinearLayout>